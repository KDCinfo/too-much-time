{
  "manifest_version": 2,
  "name": "Too-Much-Time",
  "version": "0.0.7",
  "description": "Be more conscious of the time you spend on specific websites.",
  "icons": { "16": "icon16.png",
             "32": "icon32.png",
             "36": "icon36.png",
             "48": "icon48.png",
             "72": "icon72.png",
             "96": "icon96.png",
            "128": "icon128.png",
            "144": "icon144.png",
            "192": "icon192.png",
            "256": "icon256.png" },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "96": "icon96.png"
      }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "storage",
    "alarms",
    "tabs"
  ],
  "author": "Keith D Commiskey (https://kdcinfo.com)",
  "homepage_url": "https://kdcinfo.com/app/tmt/",
  "short_name": "Too-Much-Time"
}
